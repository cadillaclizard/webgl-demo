{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build/",
    "sourceMap": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "paths": {
      "three-full": ["node_modules/@types/three"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}